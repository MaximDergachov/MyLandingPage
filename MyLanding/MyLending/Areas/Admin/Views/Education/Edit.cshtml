@model Education
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

@*<script src="~/js/ckeditor5-build-classic/ckeditor.js"></script>*@

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="Education" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="ImagePath" />

            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="ContentEducation"></label>
                <input asp-for="ContentEducation" />
                <span asp-validation-for="ContentEducation"></span>
            </div>
            <div>
                <label asp-for="ImagePath"></label>
                <input type="file" name="titleImageFile" id="titleImageFile" />
                <div>
                    <img class="img-block" src="~/img/@Model.ImagePath" />
                </div>
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>