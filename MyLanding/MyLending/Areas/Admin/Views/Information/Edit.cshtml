@model Information
@{
    string strTitle = "Редактировать запись";
    string code = ViewBag.Code;
    ViewBag.Title = strTitle;
}

@*<script src="~/js/ckeditor5-build-classic/ckeditor.js"></script>*@

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="Information" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="CodeWord" />

            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div>
                <label asp-for="Subtitle"></label>
                <textarea asp-for="Subtitle"></textarea>
                <span asp-validation-for="Subtitle"></span>
            </div>
            @if (code == "PageAboutMe")
            {
                <div>
                    <label asp-for="Text"></label>
                    <textarea asp-for="Text"></textarea>
                    <span asp-validation-for="Text"></span>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="Text" />
            }
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>