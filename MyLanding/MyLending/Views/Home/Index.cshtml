@model Information
@{
    Meta meta = ViewBag.MetaTags;
    ViewBag.Title = meta.MetaTitle;
    ViewBag.Description = meta.MetaDescription;
    ViewBag.Keywords = meta.MetaKeywords;
    Information AboutMe = ViewBag.AboutMe;
    Information skills = ViewBag.Skills;
    Information experience = ViewBag.Experience;
    Information education = ViewBag.Education;
}

<!-- Header -->
<section id="header">
    <header>
        <span class="image avatar"><img src="~/img/ava.jpg" alt="" /></span>
        <h1 id="logo"><a href="#">@Config.MyName</a></h1>
        <p>@Config.MyProfession</p>
    </header>
    <nav id="nav">
        <ul>
            <li><a href="#one" class="active">@AboutMe.Title</a></li>
            <li><a href="#two">@skills.Title</a></li>
            <li><a href="#three">@experience.Title</a></li>
            <li><a href="#four">@education.Title</a></li>
        </ul>
    </nav>
