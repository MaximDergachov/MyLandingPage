<!-- Wrapper -->
<div id="wrapper">
    <!-- Main -->
    <div id="main">
        <!-- One -->
        <section id="one">
            <div class="image main" data-position="center">
                <img src="~/img/main.jpg" alt="" />
            </div>
            <div class="container">
                <header class="major">
                    <h2>@AboutMe.Title</h2>
                    <p>
                        @AboutMe.Subtitle
                    </p>
                </header>
                <p>@AboutMe.Text</p>
            </div>
        </section>

        <!-- Two -->
        <section id="two">
            <div class="container">
                <h3>@skills.Title</h3>
                <p>@skills.Subtitle</p>
                <cache>
                    @(await Component.InvokeAsync<SkillsViewComponent>())
                </cache>
            </div>
        </section>

        <!-- Three -->
        <section id="three">
            <div class="container">
                <h3>@experience.Title</h3>
                <p>@experience.Subtitle</p>
                <cache>
                    @(await Component.InvokeAsync<ExperienceViewComponent>())
                </cache>
            </div>
        </section>

        <!-- Four -->
        <section id="four">
            <div class="container">
                <h3>@education.Title</h3>
                <p>@education.Subtitle</p>
                <div class="features">
                    <cache>
                        @(await Component.InvokeAsync<EducationViewComponent>())
                    </cache>
                </div>
